<div class="schedule">
<h3>ユーザー詳細</h3>

<div class="schedule_sub">
<table>
  <tr>
    <th class="th_width">タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th class="th_width">開始日</th>
    <td><%= @user.startday.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th class="th_width">終了日</th>
    <td><%= @user.endday.strftime("%Y/%m/%d")  %></td>
  </tr>
  <tr>
    <th>終日</th>
      <td>
      <% if @user.allday == "1" %>○
      <% end%></td>
  </tr>
  <tr>
    <th class="th_width">詳細</th>
    <td><%= @user.detail %></td>
    </tr>
</table>
</div>

<div>
  <ul>
    <li><%= link_to "編集", edit_user_path(id:@user.id) %></li>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
  </ul>
</div>
</div>